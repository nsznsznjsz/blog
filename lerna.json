{
  "npmClient": "yarn",
  "useWorkspaces": true,
  "version": "0.4.0",
  "packages": [
    "packages/*"
  ],
  "command": {
    "version": {
      "allowBranch": "main",
      "conventionalCommits": true,
      "exact": true,
      "ignoreChanges": [
        "**/*.md"
      ],
      "message": "build: publish %s"
    }
  }
}